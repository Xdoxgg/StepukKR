<Window x:Class="DantoBrick.AddServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DantoBrick"
        mc:Ignorable="d"
        Title="AddServiceWindow" Height="250" Width="300">
    <Grid Margin="10">
        <Label Content="Название услуги:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtServiceName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,0,0,0" Width="150"/>

        <Label Content="Цена:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,30,0,0" Width="150"/>

        <Label Content="Описание:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,60,0,0" Width="150" Height="60" AcceptsReturn="True"/>

        <Button Content="Сохранить" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,130,0,0" Click="BtnSave_Click"/>
        <Button Content="Закрыть" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,170,0,0" Click="BtnClose_Click"/>
    </Grid>
</Window>
