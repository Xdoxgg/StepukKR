<Window x:Class="DantoBrick.DoctorAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DantoBrick"
        mc:Ignorable="d"
        Title="DoctorAddWindow" Height="250" Width="300">
    <Grid Margin="10">
        <Label Content="Имя:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,0,0,0" Width="150"/>

        <Label Content="Фамилия:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,30,0,0" Width="150"/>

        <Label Content="Специализация:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0"/>
        <TextBox x:Name="txtSpecialization" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,60,0,0" Width="150"/>

        <Label Content="Расписание:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,90,0,0"/>
        <TextBox x:Name="txtSchedule" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,90,0,0" Width="150"/>

        <Button Content="Сохранить" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,130,0,0" Click="BtnSave_Click"/>
        <Button Content="Закрыть"  Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,170,0,0" Click="BtnClose_Click"/>
    </Grid>
</Window>
