<Window x:Class="DantoBrick.AddAppointmentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DantoBrick"
        mc:Ignorable="d"
        Title="AddAppointmentsWindow" Height="350" Width="300">
    <Grid Margin="10">
        <Label Content="Пользователь:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbUser" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,0,0,0" Width="150"/>

        <Label Content="Врач:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <ComboBox x:Name="cmbDoctor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,30,0,0" Width="150"/>

        <Label Content="Услуга:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0"/>
        <ComboBox x:Name="cmbService" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,60,0,0" Width="150"/>

        <Label Content="Дата:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,90,0,0"/>
        <DatePicker x:Name="dpAppointmentDate" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,90,0,0" Width="150"/>

        <Label Content="Статус:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,120,0,0"/>
        <TextBox x:Name="txtStatus" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,120,0,0" Width="150"/>

        <Button Content="Сохранить" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,160,0,0" Click="BtnSave_Click"/>
        <Button Content="Закрыть" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,200,0,0" Click="BtnClose_Click"/>
    </Grid>
</Window>
